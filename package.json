{
  "name": "yoursizer-widget",
  "version": "1.0.0",
  "description": "AI-powered size recommendation widget for e-commerce",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./widget": {
      "import": "./dist/widget.esm.js",
      "require": "./dist/widget.js",
      "types": "./dist/widget.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "UI_CUSTOMIZATION_EXAMPLES.md"
  ],
  "keywords": [
    "size-recommendation",
    "ai-sizing",
    "e-commerce",
    "widget",
    "react",
    "typescript"
  ],
  "author": "YourSizer Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoursizer/widget.git"
  },
  "homepage": "https://yoursizer.com",
  "bugs": {
    "url": "https://github.com/yoursizer/widget/issues"
  },
  "private": false,
  "dependencies": {
    "@types/node": "^24.1.0",
    "@types/three": "^0.158.3",
    "@types/uuid": "^10.0.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.158.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:widget": "vite build --mode widget",
    "build:demo": "vite build --mode demo",
    "preview": "vite preview",
    "preview:widget": "vite preview --mode widget",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "serve:test": "python3 -m http.server 8080 --directory ."
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
